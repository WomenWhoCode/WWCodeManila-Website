<div class="form-group row">
  <label for="deviceType" class="col-sm-2 col-form-label">Type</label>
  <div class="col-sm-10">
    <select class="form-control" id="deviceType" name="type" required>
      <option value>Select type</option>
      <option>Laptop</option>
      <option>Phone</option>
      <option>Tablet</option>
      <option>Others</option>
    </select>
  </div>
</div>

<div class="form-group row">
  <label for="deviceDescription" class="col-sm-2 col-form-label">Description</label>
  <div class="col-sm-10">
    <input type="text" class="form-control" id="deviceDescription" name="description" placeholder="Provide detailed description of your device, e.g. '13-inch MacBook Pro with stickers'" required value=<%= device.description %>>
  </div>
</div>

<button class="btn btn-default" type="submit">
  Register
</button>
