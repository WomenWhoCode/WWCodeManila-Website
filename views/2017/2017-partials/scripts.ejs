  <script>
    function showAddDeviceForm(e) {
      var button = document.getElementById('registerDeviceButton');
      var form = document.getElementById('addDevice');

      button.classList.add('hidden');
      form.classList.remove('hidden');
    }

    function deleteDevice(deviceId) {
      var button = document.querySelector(`[data-device-id="${deviceId}"]`)
      // Disable button to prevent double click
      button.disabled = true

      var xhr = new XMLHttpRequest()
      xhr.open('DELETE', `/devices/${deviceId}`)
      xhr.onload = function() {
        if (xhr.status === 200) {
          location.reload()
        }
      }
      xhr.send()
    }
  </script>

